<div class="col-md-12">
  <h2 class="text-center">我加入的讨论版</h2>
  <table class="table">
    <thead>
      <tr>
        <th>  # </th>
        <th>  Title </th>
        <th>  Description </th>
        <th>  Post Count </th>
        <th>  Last Update </th>
      </tr>
    </thead>
    <tbody>
      <% @group.each do |gr| %>
        <tr>
          <td>  # </td>
          <td>  <%= link_to(gr.title, group_path(gr)) %>  </td>
          <td>  <%= gr.description %> </td>
          <td>  <%= gr.posts.count %> </td>
          <td>  <%= gr.updated_at %>  </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
